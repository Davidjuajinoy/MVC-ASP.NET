<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding:0;">
    
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">@ViewBag.Title</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item nav-link">@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li class="nav-item nav-link">@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li class="nav-item nav-link">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li class="nav-item nav-link">@Html.ActionLink("Restaurante", "Index", "Restaurants")</li>
                        

                    </ul>
                </div>
            </nav>
        </div>
    
    <div class="container body-content">
        @if (TempData["Mensaje"] !=null)
        {
        <div class="alert alert-info">
            @TempData["Mensaje"]
        </div>            
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            @RenderSection("footer", required: false)
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
